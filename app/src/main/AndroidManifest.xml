<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sepjani.unofficiallivecodingtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LivecodingApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app2"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="Livecoding.tv"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".activity.LoginWebActivity"
            android:label="Authorize" />
        <activity android:name=".activity.VideoPlayerActivity"></activity>
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".chat.MyService"
            android:enabled="true" />

    </application>

</manifest>